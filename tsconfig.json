{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@src/*": ["src/*"],
      "@component/*": ["src/component/*"],
      "@dark-mode/*": ["src/dark-mode/*"],
      "@datatable/*": ["src/datatable/*"],
      "@db": ["src/db.ts"],
      "@favorite/*": ["src/favorite/*"],
      "@frame/*": ["src/frame/*"],
      "@info-table/*": ["src/component/info-table/*"],
      "@img/*": ["src/assets/img/*"],
      "@lib/*": ["src/lib/*"],
      "@layout/*": ["src/layout/*"],
      "@markdown/*": ["src/assets/markdown/*"],
      "@page/*": ["src/page/*"],
      "@search/*": ["src/search/*"],
      "@stat/*": ["src/stat/*"],
      "@tab/*": ["src/tab/*"],
      "@type": ["src/type/index.ts"]
    }
  },
  "exclude": ["app", "node_modules"]
}
