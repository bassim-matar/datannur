{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@component/*": ["src/component/*"],
      "@dark_mode/*": ["src/dark_mode/*"],
      "@datatable/*": ["src/datatable/*"],
      "@db": ["src/db.ts"],
      "@favorite/*": ["src/favorite/*"],
      "@frame/*": ["src/frame/*"],
      "@infoTable/*": ["src/component/infoTable/*"],
      "@img/*": ["src/img/*"],
      "@lib/*": ["src/lib/*"],
      "@layout/*": ["src/layout/*"],
      "@markdown/*": ["src/markdown/*"],
      "@page/*": ["src/page/*"],
      "@search/*": ["src/search/*"],
      "@stat/*": ["src/stat/*"],
      "@tab/*": ["src/tab/*"]
    }
  },
  "exclude": ["app", "node_modules"]
}
