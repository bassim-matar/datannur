{
  "name": "datannur",
  "version": "0.12.8",
  "description": "datannur is a portable data catalog that can run without a server",
  "license": "MIT",
  "type": "module",
  "private": true,
  "main": "src/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "open-cli app/index.html",
    "serve": "vite preview",
    "test:unit": "vitest run --exclude=test/ui.test.ts",
    "test:ui": "npm run build && vitest run test/ui.test.ts",
    "test": "npm run test:unit && npm run test:ui",
    "test:no-build": "vitest run",
    "node:ts": "node --experimental-strip-types --disable-warning=ExperimentalWarning",
    "static-make": "vite build && npm run node:ts app/node-scripts/static-make.ts",
    "deploy": "npm run node:ts app/node-scripts/deploy.ts",
    "static-deploy": "npm run static-make && npm run deploy",
    "lint": "eslint src/ test/ public/node-scripts/ --ext .ts,.svelte",
    "type-check": "tsc --noEmit",
    "svelte-check": "svelte-check --workspace src",
    "format": "prettier --write . '!**/*.json.js'",
    "format:check": "prettier --check . '!**/*.json.js'",
    "check": "npm run format:check && npm run lint && npm run type-check && npm run svelte-check",
    "verify": "npm run check && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@types/serve-handler": "^6.1.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-svelte": "^3.12.4",
    "jiti": "^2.6.0",
    "jsonjsdb-builder": "^0.5.2",
    "open-cli": "^8.0.0",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.93.1",
    "serve-handler": "^6.1.6",
    "sitemap": "^8.0.0",
    "svelte": "^5.39.5",
    "svelte-check": "^4.3.2",
    "svelte-eslint-parser": "^1.3.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vite-plugin-full-reload": "^1.2.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "datatables.net": "^2.3.4",
    "datatables.net-bm": "^2.3.4",
    "datatables.net-buttons": "^3.2.5",
    "datatables.net-buttons-bm": "^3.2.5",
    "datatables.net-fixedcolumns": "^5.0.5",
    "datatables.net-fixedcolumns-bm": "^5.0.5",
    "datatables.net-fixedheader": "^4.0.3",
    "datatables.net-fixedheader-bm": "^4.0.3",
    "datatables.net-scroller": "^2.4.3",
    "datatables.net-scroller-bm": "^2.4.3",
    "diff": "^8.0.2",
    "file-saver": "^2.0.5",
    "fitty": "^2.4.2",
    "flexsearch": "^0.8.212",
    "jquery": "^3.7.1",
    "jquery-powertip": "^1.3.2",
    "jsonjsdb": "^0.6.6",
    "jszip": "^3.10.1",
    "marked": "^16.3.0",
    "mermaid": "^11.12.0",
    "minimasonry": "^1.3.2",
    "navigo": "^8.11.1"
  },
  "prettier": {
    "semi": false,
    "arrowParens": "avoid",
    "singleQuote": true
  }
}
