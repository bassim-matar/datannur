    ".nojekyll",
    "deploy.config.template.json",
    "data/jsonjsdb-config.html",
    "data/deploy.config.json",
    "data/static-make.config.json",
    "data/update_app.json",
    "tsconfig.json"
  ],
  "syncOption": {
    "delete": true
  }
}
